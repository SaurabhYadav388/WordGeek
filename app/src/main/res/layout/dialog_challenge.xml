<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/custom_color2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/custom_color1">

        <TextView
            android:id="@+id/text_challenge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Challenge"
            android:layout_centerHorizontal="true"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_margin="3dp"/>

        <ImageButton
            android:id="@+id/button_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_close"
            android:background="@android:color/transparent"
            android:layout_alignParentEnd="true"
            app:tint="@android:color/white"
            android:layout_margin="5dp"/>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="none"
        android:padding="16dp"
        android:text="Challenge your friend with a word from 4 to 6 letters:"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/edit_word"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"

        android:hint="Enter word"
        android:inputType="text"
        android:maxLines="1"
        android:padding="8dp"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/text_word_validation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:text=""
        android:textColor="@color/teal_200"
        android:textSize="14sp"
        android:ellipsize="none" />

    <Button
        android:id="@+id/button_copy_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:drawableLeft="@drawable/icon_copy_link"
        android:text="Copy Link"
        android:paddingRight="15dp"
        android:background="@drawable/copy_link_btn_states"

        android:textColor="@android:color/white"
        android:textSize="18sp" />
</LinearLayout>
