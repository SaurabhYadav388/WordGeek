<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- This shape defines the background color and corner radius -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/custom_color1" /> <!-- Replace this with your desired teal color -->
            <corners android:radius="8dp" /> <!-- Adjust the radius as needed -->
        </shape>
    </item>
    <!-- This shape defines the elevation (shadow) -->
    <item
        android:left="0dp"
        android:top="4dp"
        android:right="0dp"
        android:bottom="8dp">
        <shape android:shape="rectangle">
            <solid android:color="#20000000" /> <!-- Adjust the alpha value to control the shadow intensity -->
            <corners android:radius="8dp" />
        </shape>
    </item>
</layer-list>
