<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#D5FFFF"
    android:padding="10dp"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/app_logo_id"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/woordgeek_applogo">
    </ImageView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center_vertical"
        android:layout_margin="2dp"
        android:weightSum="1">

        <Button
            android:id="@+id/classic_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:scaleY="1.3"
            android:layout_weight="0.7"
            android:layout_gravity="center"
            android:text="Classic"
            android:textSize="20sp"
            android:padding="10dp"
            android:background="@drawable/main_btn_background"
            />
        <include
            layout="@layout/wordsize_counter"
            android:id="@+id/counterClassic" />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:layout_margin="5dp"
        android:weightSum="1">

        <Button
            android:id="@+id/dordle_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="0.7"
            android:layout_gravity="center"
            android:text="Dordle"
            android:textSize="16sp"
            android:padding="8dp"
            android:background="@drawable/main_btn_background" />
        <include
            layout="@layout/wordsize_counter"
            android:id="@+id/counterDordle" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:layout_margin="5dp"
        android:weightSum="1">

        <Button
            android:id="@+id/quordle_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="0.7"
            android:layout_gravity="center"
            android:text="Quordle"
            android:textSize="16sp"
            android:padding="8dp"
            android:background="@drawable/main_btn_background" />

        <include
            layout="@layout/wordsize_counter"
            android:id="@+id/counterQuordle" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:weightSum="1">

        <Button
            android:id="@+id/octordle_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="0.7"
            android:layout_gravity="center"

            android:text="Octordle"
            android:textSize="16sp"
            android:padding="8dp"
            android:background="@drawable/main_btn_background" />

        <include
            layout="@layout/wordsize_counter"
            android:id="@+id/counterOctordle" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_margin="5dp"
        android:weightSum="1">

        <Button
            android:id="@+id/challenge_friend_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_gravity="center"
            android:text="Challenge Friend"
            android:textSize="16sp"
            android:padding="8dp"
            android:background="@drawable/main_btn_background" />


    </LinearLayout>

    <Button
        android:id="@+id/multiPlayerbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="Multiplayer"
        android:background="@drawable/main_btn_background"/>


</LinearLayout>
